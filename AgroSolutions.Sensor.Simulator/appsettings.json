{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SensorIngestion": {
    "BaseUrl": "https://localhost:7001",
    "Endpoint": "/api/sensor-data"
  },
  "Authentication": {
    "Token": ""
  },
  "Simulation": {
    "FieldIds": [1, 2, 3],
    "IntervalSeconds": 45,
    "SoilHumidity": {
      "MinValue": 20,
      "MaxValue": 80,
      "Delta": 2,
      "InitialValue": 50
    },
    "Temperature": {
      "MinValue": 15,
      "MaxValue": 35,
      "Delta": 0.5,
      "InitialValue": 25
    },
    "Rainfall": {
      "MinValue": 0,
      "MaxValue": 50,
      "Delta": 1,
      "InitialValue": 5
    }
  }
}
